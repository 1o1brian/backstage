#messages-index
  %h2 
    == #{simple_class_name( @destination ).capitalize}: #{link_to( object_path( @destination ), @destination.name)} :: Messages
  %table
    %tr
      %th ID
      %th Delivery Count
      %th Properties
      %th Text
    - @destination.each do |message|
      %tr
        %td
          = link_to( object_path( @destination, message ), message.jms_id )
        %td
          = message.delivery_count
        %td
          = haml :'messages/properties', :locals => { :message => message }
        %td
          = truncate( message.text )
          
